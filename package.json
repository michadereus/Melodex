{
  "name": "melodex-root",
  "private": true,
  "overrides": {
    "form-data": "^4.0.4",
    "tough-cookie": "^4.1.3",
    "uuid": "^9.0.1"
  },
  "scripts": {
    "predev": "npm run install:all",
    "dev": "npx -y concurrently -n API,WEB -c auto \"npm:dev:api\" \"npm:dev:web\"",
    "dev:api": "npm -C melodex-back-end start",
    "dev:web": "npm -C melodex-front-end run dev",
    "install:all": "npm -C melodex-back-end install && npm -C melodex-front-end install",
    "test": "vitest run",
    "test:unit-ui": "vitest run --project unit-ui",
    "test:integration": "vitest run --project integration",
    "test:watch": "vitest",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "install:all:ci": "npm -C melodex-back-end ci && npm -C melodex-front-end ci"
  },
  "devDependencies": {
    "@cypress/webpack-dev-server": "^5.1.2",
    "@testing-library/cypress": "^10.1.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.0.0",
    "cypress": "^15.3.0",
    "dotenv": "^17.2.3",
    "jsdom": "^27.0.0",
    "nock": "^14.0.10",
    "supertest": "^7.1.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "whatwg-fetch": "^3.6.20"
  }
}
