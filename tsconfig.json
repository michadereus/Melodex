{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,                 // <-- prevents overwriting your .js inputs
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": ["vitest/globals", "@testing-library/jest-dom", "node"],
    "baseUrl": "."
  },
  "include": [
    "tests",
    "support",
    "melodex-front-end/src/**/*.jsx",
    "melodex-back-end/**/*.js"
  ]
}
