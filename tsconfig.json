{
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["vitest/globals", "vite/client", "node"],
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "tests/**/*", "vite.config.*", "env.d.ts"],
  "exclude": ["node_modules", "dist", "build"]
}