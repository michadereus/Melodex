{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "jsx": "react-jsx",

    "allowJs": true,
    "noEmit": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    "types": ["node", "vitest/globals", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "lib": ["ES2022", "DOM"]
  },
  "include": [
    "tests",
    "support",
    "vitest.config.mjs",
    "melodex-front-end/src/**/*.jsx",
    "melodex-back-end/**/*.js"
  ]
}
